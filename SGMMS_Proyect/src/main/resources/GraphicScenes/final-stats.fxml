<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" styleClass="menu-background" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.bunuelolovers.sgmms.sgmms_proyect.controller.fxmlControllers.FinalStatsController">
    <children>
        <VBox alignment="CENTER" layoutX="200.0" layoutY="200.0" prefHeight="400.0" prefWidth="400.0" spacing="30.0">
            <children>
                <Label text="¡Se acabó!" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Label>
                <Label text="Tu puntuacion final:" textFill="WHITE">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Label>
                <Label fx:id="finalScoreLabel" text="0" textFill="#ffd700">
                    <font>
                        <Font name="System Bold" size="48.0" />
                    </font>
                </Label>
                <HBox alignment="CENTER" spacing="40.0">
                    <children>
                        <Button fx:id="playAgainButton" mnemonicParsing="false" onAction="#onClickPlayAgain" prefHeight="50.0" prefWidth="150.0" styleClass="menu-button" text="Volver a jugar">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                        <Button fx:id="exitButton" mnemonicParsing="false" onAction="#onClickExit" prefHeight="50.0" prefWidth="150.0" styleClass="menu-button" text="Salir">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>