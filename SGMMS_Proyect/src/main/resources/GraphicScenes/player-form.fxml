<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20" stylesheets="@../org/bunuelolovers/sgmms/sgmms_proyect/css/playerForm_style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.bunuelolovers.sgmms.sgmms_proyect.controller.fxmlControllers.PlayerFormController">
    <padding>
        <Insets bottom="40" left="40" right="40" top="40" />
    </padding>

    <Pane prefHeight="100" prefWidth="600">
        <Canvas fx:id="fxmlCanvas" height="100" width="720" />
    </Pane>

    <Label styleClass="header" text="Bienvenido " />
    <TextField fx:id="usernameField" promptText="Ingresa tu nombre de usuario" />
    <TextField fx:id="minutes" promptText="Ingresa el numero de segundos que quieres jugar! (10,15,30...)" />
    <HBox alignment="CENTER" spacing="20">
        <RadioButton fx:id="radioFemale" styleClass="radio-button" text="Femenino" />
        <RadioButton fx:id="radioMale" styleClass="radio-button" text="Masculino" />
    </HBox>

    <Button onAction="#onActionStart" styleClass="start-button" text="Comenzar" />

    <Label fx:id="textWelcome" styleClass="header" />
   <Button fx:id="manual" mnemonicParsing="false" onAction="#OnClickManual" text="MANUAL" />
</VBox>
